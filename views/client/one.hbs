<h2>{{client.name}}</h2>
<table class="header-of-left">
  <tbody>
    <tr>
      <th>Email</th>
      <td>
        <a href="mailto: {{client.email}}" target="_blank">{{client.email}}</a>
      </td>
    </tr>
    <tr>
      <th>Imię</th>
      <td>
        {{client.name}}
      </td>
    </tr>
    <tr>
      <th>Data nastęnego kontaktu</th>
      <td>
        {{client.nextContactAt}}
      </td>
    </tr>
    {{#if client.notes}}
      <tr>
        <th>Notatki</th>
        <td>
          {{client.notes}}
        </td>
      </tr>
    {{/if}}
  </tbody>
</table>
<p>
  <form method='GET'action="/client/form/edit/{{client.id}}">
  <button type="submit">Edytuj Dane</button>
  </form>
</p>

<p>
  {{> go-to-clients}}
</p>